@model E_MeetingMS.ViewModels.NewMeetingViewModel

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="w3-row">

        <h2 style="font-family:'Montserrat';font-weight: bolder;color: #9d1f45;">Create Meeting Notification </h2>

        <div class="col-lg-5 col-md-6 col-sm-12">

            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "Please, Fix the errors below!!", new { @class = "font-strong" })
            
            <div class="form-group  mb-1">

                
                @Html.DropDownListFor(m => m.UserID, new SelectList(Model., "Value", "Text"),
    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserID)
            </div>

           


           

          


           


            <div class="form-group w3-margin-right">
                <label for="Files" class="control-label">Document(s)</label>

                <input type="file" name="postedFiles" multiple="multiple" id="Files" class=" " required />
            </div>

        </div>



        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-info btn-block btn-lg " />
            </div>
        </div>

    </div>


}






@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(document).ready(function () {

            $('#SelectedUsers').multiselect();

        });

    </script>

}
