@using E_MeetingMS.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<br /><br />
<div class="row w3-margin-top" style="background-image: url('~/Images/conference_room_960_720.jpg')">
    <div class="col-md-push-4 w3-black w3-opacity-min col-md-5 w3-card-4 w3-padding-16 w3-round-xxlarge w3-margin w3-border-black w3-text-white">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken() 
                <h3 class="w3-text-white text-center"><b><i class="fa fa-lock" aria-hidden="true"></i> Use a local account to log in.</b></h3>
                <div class="w3">
                    @*<img src="~/Images/login_2.jpg" class="img-responsive w3-center w3-circle" />*@
                </div>
                
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "w3-text-white" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label w3-text-white" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control w3-large w3-text-black" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label w3-text-white" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control w3-large w3-text-black" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class=" w3-check">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @*<input type="submit" value="Log in" class="btn btn-danger2 " /><span class="glyphicon glyphicon-user"></span>*@

                        <button type="submit" class="btn btn-danger2 btn-block"><span class="glyphicon glyphicon-off"></span> Login</button>
</div>
                </div>
                <p>
                    @*@Html.ActionLink("Register as a new user", "Register")*@
                </p>
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
       
       
        <p class="w3-center "><span class="w3-badge w3-unilag-maroon w3-padding" style="font-size: 28px;"><b>OR</b></span></p> 

        <section id="socialLoginForm" class="col-md-offset-2 col-md-10">
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
    @*<div class="col-md-4 w3-card-4 w3-padding-32 w3-margin w3-round-xxlarge w3-center">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>*@

   
   
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}