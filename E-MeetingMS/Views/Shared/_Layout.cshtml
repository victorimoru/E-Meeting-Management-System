<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
     <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="icon" type="image/x-icon" href="~/Images/unilag_icon.png" />
    <link href="https://fonts.googleapis.com/css?family=Righteous&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
  
   
    <title>@ViewBag.Title - E-Meeting MS</title>

    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body, html {height: 100%}
   .bgimg {
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url("../Images/conference_room_960_720.jpg");
  min-height: 100%;
  
}
    </style>
</head>
<body>
    <div class="navbar  navbar-inverse navbar-fixed-top navbar-static-top " style="font-family: 'Montserrat';">
        <div class="container">

            <div class="navbar-header ">
                <button type="button" class="navbar-toggle " data-toggle="collapse" data-target=".navbar-collapse" style="margin-top: 25px;">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#home" class="w3-padding w3-text-white  w3-xlarge w3-left"><img src="~/Images/transparent.png" style="width: 90px; height: 90px;" /></a>

                @Html.ActionLink("E-Meeting Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand w3-text-white w3-xlarge w3-margin-top w3-hide-small w3-hide-medium " })
                @Html.ActionLink("E-Meeting MS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand w3-text-white w3-xlarge w3-margin-top w3-hide-small w3-hide-large " })

                @Html.ActionLink("E-Meeting MS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand w3-text-white w3-xlarge w3-margin-top w3-hide-large w3-hide-medium" })


            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a class="w3-round-large w3-left w3-margin-top w3-hide-small w3-hide-medium" href="@Url.Action("index", "Dashboard")" id="registerLink"> Dashboard</a></li>
                </ul>


                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content bgimg w3-margin-bottom">
        @RenderBody()
     
        <footer class=" navbar navbar-inverse navbar-fixed-bottom w3-padding-16" style="background-color: #841E23">
            <h6 class="w3-center w3-text-white">&copy; @DateTime.Now.ToLongDateString() - University of Lagos</h6>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
